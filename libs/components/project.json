{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/components/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/components"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project libs/components/tsconfig.lib.json"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs components {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/coverage/libs/components"],
      "options": {}
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/components/**/*.ts",
          "libs/components/package.json"
        ]
      }
    }
  },
  "tags": []
}
